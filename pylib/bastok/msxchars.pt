from    bastok.msxchars  import *
from    bastok.msxchars  import C00, C7F, C90, CA0, CFE
import  pytest

def test_blanks():
    assert ('∅', '△', '⠏', '⠗', '⠧', ) \
        == (C00, C7F, C90, CA0, CFE, )

@pytest.mark.parametrize('map, n, u', [
   #('int', 0x61, 'a'),
    ('ja',  0x62, 'b'),
    ('ja',  0x5C, '¥'),

   #('int', 0x91, 'æ'),
   #('int', 0xE0, 'α'),
    ('ja',  0x82, '♣'),
    ('ja',  0x91, 'あ'),
    ('ja',  0xB1, 'ア'),

   #('int', 0x00, '∅'),
   #('int', 0x05, '♣'),
    ('ja',  0x00, '∅'),
    ('ja',  0x01, '月'),
])
def test_charmap(map, n, u):
    cm = CHARMAP[map]
    assert (u, bytes([n])) == (cm.trans(n), cm.native(u))
